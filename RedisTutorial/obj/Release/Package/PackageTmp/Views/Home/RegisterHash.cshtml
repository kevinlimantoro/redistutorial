
@model RedisTutorial.Models.Human
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register Hash</h2>

@using (@Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @for = "name", @class = "col-md-1" })
        @Html.TextBoxFor(m => m.Name, new { @id = "name", @class = "col-md-11" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.DOB, new { @for = "dob", @class="col-md-1" })
        @Html.EditorFor(m => m.DOB, new { @id = "dob", @class = "col-md-11" })
        @Html.ValidationMessageFor(m => m.DOB)
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Address, new { @for = "Address", @class = "col-md-1" })
        @Html.TextBoxFor(m => m.Address, new { @id = "Address", @class = "col-md-11" })
        @Html.ValidationMessageFor(m => m.Address)
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Email, new { @for = "Email", @class = "col-md-1" })
        @Html.TextBoxFor(m => m.Email, new { @id = "Email", @class = "col-md-11" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Password, new { @for = "Password", @class = "col-md-1" })
        @Html.TextBoxFor(m => m.Password, new { @id = "Password", @type = "password", @class = "col-md-11" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

     <input id="Submit" type="submit" value="Submit" name="Submit" />
}
