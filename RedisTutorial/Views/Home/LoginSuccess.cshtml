@model RedisTutorial.Models.Human
@{
    ViewBag.Title = "LoginSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome @Model.Name</h2>

<div class="form-group row">
    @Html.LabelFor(m => m.Name, new { @for = "name", @class = "col-md-1" })
    @Html.TextBoxFor(m => m.Name, new { @id = "name", @class = "col-md-11", @disabled="disabled" })
    @Html.ValidationMessageFor(m => m.Name)
</div>

<div class="form-group row">
    @Html.LabelFor(m => m.DOB, new { @for = "dob", @class = "col-md-1" })
    @Html.TextBoxFor(m => m.DOB,new { @Value = Model.DOB.ToString("MM/dd/yyyy"), @disabled="disabled" })
    @Html.ValidationMessageFor(m => m.DOB)
</div>

<div class="form-group row">
    @Html.LabelFor(m => m.Address, new { @for = "Address", @class = "col-md-1" })
    @Html.TextBoxFor(m => m.Address, new { @id = "Address", @class = "col-md-11", @disabled = "disabled" })
    @Html.ValidationMessageFor(m => m.Address)
</div>

<div class="form-group row">
    @Html.LabelFor(m => m.Email, new { @for = "Email", @class = "col-md-1" })
    @Html.TextBoxFor(m => m.Email, new { @id = "Email", @class = "col-md-11", @disabled = "disabled" })
    @Html.ValidationMessageFor(m => m.Email)
</div>

<div class="form-group row">
    @Html.LabelFor(m => m.Password, new { @for = "Password", @class = "col-md-1" })
    @Html.TextBoxFor(m => m.Password, new { @id = "Password", @type = "password", @class = "col-md-11", @disabled = "disabled" })
    @Html.ValidationMessageFor(m => m.Password)
</div>